{
  "expo": {
    "name": "YCKF Mobile", // The name of your app
    "slug": "yckf-mobile-app", // Unique short name used by Expo
    "version": "1.0.0", // App version for both stores & runtime sync
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",

    // Splash screen displayed on app start
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1e3a8a"
    },

    // Tells Expo which assets to bundle
    "assetBundlePatterns": ["**/*"],

    // ----------------------------
    // iOS Configuration
    // ----------------------------
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yckf.mobile",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to capture GPS coordinates for cybercrime reports and location sharing.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to capture GPS coordinates for cybercrime reports and location sharing.",
        "NSCameraUsageDescription": "This app needs camera access to capture photo evidence for cybercrime reports.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select evidence photos for cybercrime reports."
      }
    },

    // ----------------------------
    // Android Configuration
    // ----------------------------
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e3a8a"
      },
      "package": "com.yckf.mobile",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },

    // ----------------------------
    // Web Bundler
    // ----------------------------
    "web": {
      "bundler": "metro"
    },

    // ----------------------------
    // Expo Plugins (Auto-linked native modules)
    // ----------------------------
    "plugins": [
      "expo-location",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "color": "#1e3a8a"
        }
      ],
      "expo-font"
    ],

    // ----------------------------
    // Extra Config for EAS Project
    // ----------------------------
    "extra": {
      "eas": {
        // ✅ This unique ID links your project to Expo Cloud for OTA updates
        "projectId": "98208866-3ae4-45f5-b6bc-49f038a08287"
      }
    },

    // The Expo account that owns this project
    "owner": "bienbien",

    // ----------------------------
    // EAS OTA (Over-The-Air) Update Configuration
    // ----------------------------

    // ✅ Defines how runtime versions are matched with updates
    "runtimeVersion": {
      // Use the app version (above) to determine update compatibility
      "policy": "appVersion"
    },

    // ✅ Where updates are fetched from (Expo Cloud)
    "updates": {
      // This URL connects your app build to Expo’s update service
      "url": "https://u.expo.dev/98208866-3ae4-45f5-b6bc-49f038a08287",

      // Enable automatic background updates for your testers
      "fallbackToCacheTimeout": 0 
      // 0 means: always try to fetch latest update immediately on app launch
    }
  }
}




